@using SegundoParcialHerr.ViewModels

@model LibroViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <form method="get" asp-action="Index" asp-controller="Libro">
        <div class="col-6 form-group">
            <input class="form-control" asp-for="NombreBuscado">
        </div>
        <button class="btn btn-primary">Buscar</button>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libros[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libros[0].Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libros[0].Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libros[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libros[0].Autor) 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Libros) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
