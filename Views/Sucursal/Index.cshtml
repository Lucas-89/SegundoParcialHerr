@using SegundoParcialHerr.ViewModels

@model SucursalViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <form method="get" asp-action="Index" asp-controller="Sucursal">
        <div class="col-6 form-group">
            <input class="form-control" asp-for="NombreBuscado">
        </div>
        <button class="btn btn-primary">Buscar</button>
    </form>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sucursales[0].NombreSucursal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sucursales[0].Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sucursales[0].Localidad)
            </th>
            <th>
                @* @Html.DisplayFor(model => model.Sucursales[0].Libros.) *@
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sucursales) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreSucursal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
